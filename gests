<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rozpoznawanie Gest√≥w - Mobile</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background: #000;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            overflow: hidden;
        }

        /* Kontener na wideo i wyniki */
        .container {
            position: relative;
            width: 100%;
            max-width: 640px;
        }

        video {
            width: 100%;
            height: auto;
            transform: scaleX(-1); /* Lustrzane odbicie dla selfie */
            border-radius: 10px;
        }

        #output {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.7);
            padding: 10px 20px;
            border-radius: 20px;
            font-size: 24px;
            font-weight: bold;
            color: #0f0; /* Zielony tekst */
            white-space: nowrap;
        }

        button {
            margin-bottom: 10px;
            padding: 10px 20px;
            font-size: 16px;
            background: #2196F3;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/tasks-vision/vision_bundle.js" crossorigin="anonymous"></script>
</head>
<body>

    <button id="webcamButton">W≈ÇƒÖcz Kamerƒô</button>
    
    <div class="container">
        <video id="webcam" autoplay playsinline></video>
        <div id="output">Czekam na gest...</div>
    </div>

    <script>
        const video = document.getElementById('webcam');
        const output = document.getElementById('output');
        const enableWebcamButton = document.getElementById('webcamButton');
        let gestureRecognizer;
        let runningMode = "VIDEO";
        let lastVideoTime = -1;

        // 1. Inicjalizacja modelu MediaPipe
        async function createGestureRecognizer() {
            const vision = await FilesetResolver.forVisionTasks(
                "https://cdn.jsdelivr.net/npm/@mediapipe/tasks-vision@0.10.3/wasm"
            );
            
            gestureRecognizer = await GestureRecognizer.createFromOptions(vision, {
                baseOptions: {
                    modelAssetPath:
                        "https://storage.googleapis.com/mediapipe-models/gesture_recognizer/gesture_recognizer/float16/1/gesture_recognizer.task",
                    delegate: "GPU" // U≈ºywamy GPU telefonu dla szybko≈õci
                },
                runningMode: runningMode,
                numHands: 2 // Ile rƒÖk wykrywaƒá
            });
            
            output.innerText = "Model za≈Çadowany! Kliknij przycisk.";
        }

        createGestureRecognizer();

        // 2. Obs≈Çuga kamery
        function enableCam() {
            if (!gestureRecognizer) {
                alert("Poczekaj chwilƒô, model siƒô ≈Çaduje...");
                return;
            }

            // Dostƒôp do kamery w telefonie (preferowana przednia)
            const constraints = {
                video: { facingMode: "user" } 
            };

            navigator.mediaDevices.getUserMedia(constraints).then((stream) => {
                video.srcObject = stream;
                video.addEventListener("loadeddata", predictWebcam);
                enableWebcamButton.style.display = "none";
            });
        }

        enableWebcamButton.addEventListener("click", enableCam);

        // 3. Pƒôtla rozpoznawania
        async function predictWebcam() {
            let nowInMs = Date.now();
            
            if (video.currentTime !== lastVideoTime) {
                lastVideoTime = video.currentTime;
                
                // Rozpoznaj gest
                const results = gestureRecognizer.recognizeForVideo(video, nowInMs);

                // Wy≈õwietl wynik
                if (results.gestures.length > 0) {
                    const categoryName = results.gestures[0][0].categoryName;
                    const score = parseFloat(results.gestures[0][0].score * 100).toFixed(0);
                    
                    // T≈Çumaczenie popularnych etykiet na polski
                    let displayLabel = categoryName;
                    if (categoryName === "Thumb_Up") displayLabel = "üëç Kciuk w g√≥rƒô";
                    if (categoryName === "Thumb_Down") displayLabel = "üëé Kciuk w d√≥≈Ç";
                    if (categoryName === "Open_Palm") displayLabel = "‚úã Otwarta d≈Ço≈Ñ";
                    if (categoryName === "Closed_Fist") displayLabel = "‚úä Piƒô≈õƒá";
                    if (categoryName === "Victory") displayLabel = "‚úåÔ∏è Znak V";
                    if (categoryName === "None") displayLabel = "Brak gestu";

                    output.innerText = `${displayLabel} (${score}%)`;
                } else {
                    output.innerText = "";
                }
            }

            // Powt√≥rz klatkƒô (dla p≈Çynnej animacji)
            window.requestAnimationFrame(predictWebcam);
        }
    </script>
</body>
</html>
